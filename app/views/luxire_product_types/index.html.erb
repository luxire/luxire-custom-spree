<h1>Listing Luxire Product Types</h1>

<table>
  <thead>
    <tr>
      <th>Product type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @luxire_product_types.each do |luxire_product_type| %>
      <tr>
        <td><%= luxire_product_type.product_type %></td>
        <td><%= luxire_product_type.description %></td>
        <td><%= link_to 'Show', luxire_product_type %></td>
        <td><%= link_to 'Edit', edit_luxire_product_type_path(luxire_product_type) %></td>
        <td><%= link_to 'Destroy', luxire_product_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

