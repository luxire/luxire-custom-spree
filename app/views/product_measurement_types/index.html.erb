<h1>Listing Product Measurement Types</h1>

<table>
  <thead>
    <tr>
      <th>Luxire product type</th>
      <th>Measurement type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_measurement_types.each do |product_measurement_type| %>
      <tr>
        <td><%= product_measurement_type.luxire_product_type_id %></td>
        <td><%= product_measurement_type.measurement_type_id %></td>
        <td><%= link_to 'Show', product_measurement_type %></td>
        <td><%= link_to 'Edit', edit_product_measurement_type_path(product_measurement_type) %></td>
        <td><%= link_to 'Destroy', product_measurement_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

