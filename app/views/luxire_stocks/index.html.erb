<p id="notice"><%= notice %></p>

<h1>Listing Luxire Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Stock location</th>
      <th>Parent sku</th>
      <th>Virtual count on hands</th>
      <th>Physical count on hands</th>
      <th>Measuring unit</th>
      <th>Backorderable</th>
      <th>Deleted at</th>
      <th>Rack</th>
      <th>Threshold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @luxire_stocks.each do |luxire_stock| %>
      <tr>
        <td><%= luxire_stock.stock_location_id %></td>
        <td><%= luxire_stock.parent_sku %></td>
        <td><%= luxire_stock.virtual_count_on_hands %></td>
        <td><%= luxire_stock.physical_count_on_hands %></td>
        <td><%= luxire_stock.measuring_unit %></td>
        <td><%= luxire_stock.backorderable %></td>
        <td><%= luxire_stock.deleted_at %></td>
        <td><%= luxire_stock.rack %></td>
        <td><%= luxire_stock.threshold %></td>
        <td><%= link_to 'Show', luxire_stock %></td>
        <td><%= link_to 'Edit', edit_luxire_stock_path(luxire_stock) %></td>
        <td><%= link_to 'Destroy', luxire_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

